---
import Section from '@/pages/resume/components/ui/Section.astro'
import { Medal as AwardsIcon } from 'lucide-astro'

export interface AwardItem {
  date?: string
  org?: string
  title: string
}

interface Props {
  awards: AwardItem[]
}

const { awards } = Astro.props
---

<Section
  title="Awards & Accomplishments"
  items={awards}
  icon={AwardsIcon}
>
  <template slot="item">
    {
      (item: AwardItem) => (
        <>
          {item.title}
          {item.org && ` â€” ${item.org}`}
          {item.date && ` (${item.date})`}
        </>
      )
    }
  </template>
</Section>
