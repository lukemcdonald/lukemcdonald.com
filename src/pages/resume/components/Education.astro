---
import Section from '@/pages/resume/components/ui/Section.astro'
import { Brain as EducationIcon } from 'lucide-astro'

interface EducationItem {
  area?: string
  institution: string
  studyType?: string
}

interface Props {
  education: EducationItem[]
}

const { education } = Astro.props
---

<Section
  title="Education"
  items={education}
  icon={EducationIcon}
>
  <template slot="item">
    {
      (item: EducationItem) => (
        <>
          {item.studyType}
          {item.area ? `${item.area} ` : ''}â€” {item.institution}
        </>
      )
    }
  </template>
</Section>
