---
import Awards from '@/features/resume/components/Awards.astro'
import Education from '@/features/resume/components/Education.astro'
import Experience from '@/features/resume/components/Experience.astro'
import Footer from '@/features/resume/components/Footer.astro'
import Header from '@/features/resume/components/Header.astro'
import Personal from '@/features/resume/components/Personal.astro'
import Skills from '@/features/resume/components/Skills.astro'
import PrintButton from '@/features/resume/components/ui/PrintButton.astro'
import { getResumeData } from '@/features/resume/resume.server'
import ProseLayout from '@/layouts/ProseLayout.astro'

const data = await getResumeData()
---

<ProseLayout
  title="Resume"
  description="The resume of Luke McDonald, a Software Engineer with a product mindset and an eye for design."
  bodyClass="bg-white text-primary-900 dark:bg-primary-900 dark:text-primary-50"
>
  <PrintButton
    slot="before-prose"
    class="fixed top-4 right-4 dark:shadow"
  />

  <Header basics={data.basics} />
  <Skills skills={data.skills} />
  <Experience experience={data.experience} />
  <Awards awards={data.awards} />
  <Education education={data.education} />
  <Personal personal={data.personal} />
  <Footer />
</ProseLayout>
