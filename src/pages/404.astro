---
import Entry from '@/components/Entry/Entry.astro'
import Layout from '@/layouts/Layout.astro'
import Main from '@/layouts/Main.astro'
import { createErrorData } from '@/utils/error'

const errorData = createErrorData(404, 'The page you are looking for does not exist.')
const { html, image, imageAlt, subtitle, title } = errorData
---

<Layout title={subtitle ?? title}>
  <Main>
    <Entry
      subtitle={subtitle}
      title={title}
      image={image}
      imageAlt={imageAlt}
    >
      <slot set:html={html} />
    </Entry>
  </Main>
</Layout>
