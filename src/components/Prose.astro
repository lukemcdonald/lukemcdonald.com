---
import type { HTMLAttributes } from 'astro/types'

type WrapperTag = 'div' | 'section' | 'article' | 'main'

interface Props extends HTMLAttributes<WrapperTag> {
  as?: WrapperTag
  class?: string
}

const { as: Component = 'div', class: className, ...delegated } = Astro.props satisfies Props
---

<Component
  {...delegated}
  class:list={[
    'prose max-w-[70ch] dark:prose-invert prose-headings:font-semibold prose-h1:text-2xl prose-h2:text-xl prose-a:font-normal',
    className,
  ]}
>
  <slot />
</Component>
