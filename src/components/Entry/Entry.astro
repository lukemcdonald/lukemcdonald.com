---
import type { ImageMetadata } from 'astro'

import ContactInfo from '@/components/ContactInfo.astro'

import EntryBody from './EntryBody.astro'
import EntryHeader from './EntryHeader.astro'

export interface Props {
  description?: string
  image?: ImageMetadata | string
  imageAlt?: string
  subtitle?: string
  title: string
}

const { description, image, imageAlt, subtitle, title } = Astro.props
---

<article class="entry min-h-screen w-full overflow-hidden bg-primary-800 lg:min-h-0">
  <EntryHeader
    description={description}
    subtitle={subtitle}
    title={title}
  />

  <ContactInfo />

  <EntryBody
    image={image}
    imageAlt={imageAlt}
  >
    <slot />
  </EntryBody>
</article>
