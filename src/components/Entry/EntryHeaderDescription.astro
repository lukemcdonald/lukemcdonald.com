---
import GreetingLinks from '@/components/GreetingLinks.astro'

export interface Props {
  description?: string
}

const { description } = Astro.props
const hasDefaultSlot = Astro.slots.has('default')

const descriptionComponents = {
  GreetingLinks,
}
const Component = descriptionComponents[description as keyof typeof descriptionComponents]
const isComponent = Boolean(Component)
---

<div class="text-lg leading-normal text-pretty">
  {
    hasDefaultSlot ? <slot />
    : isComponent ? <Component />
    : description ? <slot set:html={description} />
    : null
  }
</div>
