---
import { Image } from 'astro:assets'

import backgroundImage from '@/assets/images/landscape-tree-fog.jpg'
import Grasses from '@/components/Background/Grasses.astro'
---

<Image
  alt="landscape"
  class="absolute top-1/2 left-1/2 hidden h-full max-h-screen w-full -translate-x-1/2 -translate-y-1/2 transform overflow-hidden object-cover opacity-20 blur-xs grayscale lg:block dark:opacity-10"
  fetchpriority="low"
  loading="lazy"
  quality={70}
  src={backgroundImage}
  style="grid-area: 1/1"
/>

<Grasses />
