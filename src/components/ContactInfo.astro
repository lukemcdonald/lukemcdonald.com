---
import Heading from "@/components/Heading.astro"

const { title } = Astro.props

const contactLinks = [
  { name: 'Email', href: 'mailto:thelukemcdonald@gmail.com' },
  { name: 'GitHub', href: 'https://github.com/lukemcdonald' },
  { name: 'LinkedIn', href: 'https://www.linkedin.com/in/thelukemcdonald/' },
]
---

<div class="entry__nav bg-white px-5 py-10 text-primary-900 sm:px-10 lg:py-8 xl:py-12">
  <Heading
    as="h1"
    class="mb-6"
    size="3xl"
    weight="normal"
  >
    {title || 'Connect.'}
  </Heading>

  <nav class="flex items-center">
    {
      contactLinks.map((link) => (
        <a
          class="block border-b-2 border-transparent tracking-wide text-inherit uppercase no-underline hover:border-primary-500 font-medium"
          href={link.href}
        >
          {link.name}
        </a>
        <hr class="mx-4 block w-full max-w-24 border-primary-200 last:hidden" />
      ))
    }
  </nav>
</div>
