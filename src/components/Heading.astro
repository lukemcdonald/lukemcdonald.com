---
import type { HeadingProps } from '@/components/Typography/Typography.types'

import Typography from '@/components/Typography/Typography.astro'

interface Props extends HeadingProps {}

const {
  as = 'h2',
  class: className,
  color = 'primary',
  size = 'xl',
  weight = 'bold',
  wrap = 'balance',
  ...delegated
} = Astro.props satisfies Props
---

<Typography
  as={as}
  class={className}
  color={color}
  size={size}
  weight={weight}
  wrap={wrap}
  {...delegated}
>
  <slot />
</Typography>
