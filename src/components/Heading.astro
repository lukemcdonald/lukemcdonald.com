---
import type { HTMLAttributes } from 'astro/types'

type HeadingTag = 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'

const colors = {
  primary: 'text-primary-900',
  secondary: 'text-primary-800',
}

const sizes = {
  '2xl': 'text-2xl',
  '3xl': 'text-3xl',
  '4xl': 'text-4xl',
  '5xl': 'text-5xl',
  '6xl': 'text-6xl',
  lg: 'text-lg',
  md: 'text-base',
  sm: 'text-sm',
  xl: 'text-xl',
}

const weights = {
  bold: 'font-semibold',
  light: 'font-light',
  medium: 'font-medium',
  normal: 'font-normal',
}

const wraps = {
  balance: 'text-balance',
  nowrap: 'text-nowrap',
  pretty: 'text-pretty',
  wrap: 'text-wrap',
}

interface Props extends HTMLAttributes<HeadingTag> {
  as?: HeadingTag
  color?: keyof typeof colors
  size?: keyof typeof sizes
  weight?: keyof typeof weights
  wrap?: keyof typeof wraps
}

const {
  as: Component = 'h2',
  class: className,
  color = 'primary',
  size = 'xl',
  weight = 'bold',
  wrap = 'balance',
  ...delegated
} = Astro.props satisfies Props
---

<Component
  class:list={[colors[color], sizes[size], weights[weight], wraps[wrap], className]}
  {...delegated}
>
  <slot />
</Component>
