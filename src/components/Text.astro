---
import type { TextProps } from '@/components/Typography/Typography.types'

import Typography from '@/components/Typography/Typography.astro'

interface Props extends TextProps {}

const {
  as = 'div',
  class: className,
  color,
  size = 'md',
  weight,
  wrap = 'pretty',
  ...delegated
} = Astro.props satisfies Props
---

<Typography
  as={as}
  class={className}
  color={color}
  size={size}
  weight={weight}
  wrap={wrap}
  {...delegated}
>
  <slot />
</Typography>
